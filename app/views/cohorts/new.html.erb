<%= render "shared/cohort_header" %>
<h1>New Cohorts</h1>
<%= form_for ([@admin, @cohort]) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :start %>
  <%= f.date_field :start %>
  <%= f.label :end %>
  <%= f.date_field :end %>

  <%= f.label :instructor %>
  <%= collection_select(:cohort, :instructor_ids, Instructor.all, :id, :name) %>

  <%= collection_check_boxes(:cohort, :student_ids, Student.all, :id, :name) %>

  <%= f.submit 'Submit'%>
<% end %>
