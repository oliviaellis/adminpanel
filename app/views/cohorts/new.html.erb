<%= render "shared/navbar" %>
<div class="subheader"><h2><%= current_user.first_name %></h2></div>
<div class="header" id="student_header">
  <h1>New Cohort</h1>
</div>
<div class="edit">
  <%= form_for ([@admin, @cohort]) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :start %>
    <%= f.date_field :start %>
    <%= f.label :end %>
    <%= f.date_field :end %>

    <%= f.label :students %>
    <%= collection_check_boxes(:cohort, :student_ids, Student.all, :id, :name) %>

    <%= f.label :instructor %>
    <%= collection_select(:cohort, :instructor_id, Instructor.all, :id, :name) %>

    <%= f.label :course %>
    <%= collection_select(:cohort, :course_id, Course.all, :id, :name) %>

    <%= f.submit 'Submit'%>
  <% end %>
</div>
