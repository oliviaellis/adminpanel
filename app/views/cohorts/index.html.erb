<h1>Cohorts</h1>
<% @cohorts.each do |c| %>
  <h2><%= link_to c.name, admin_cohort_path(id: c.id)%><h2>
  <h3><%= c.start%> to <%= c.end%></h3>
  <ul>
  <% c.students.each do |s| %>
    <li><%= s.first_name %> <%= s.last_name %></li>
  <% end %>
  </ul>
  <%# <!-- <h4><%= link_to "Add student", cohort_path(s), method: :get %></h4>  --> %>
  <h4><%= link_to "Delete cohort", admin_cohort_path(id: c.id), remote: true, method: :delete, data: { confirm: 'You sure?'} %></h4>
<% end %>

<%= link_to 'New Cohort', new_admin_cohort_path %>
