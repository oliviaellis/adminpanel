<%= render "shared/navbar" %>
<div class="subheader"><h2><%= current_user.first_name %></h2></div>
<div class="header" id="cohort_header">
  <h1><%= @cohort.name %></h1>
</div>
<div class="edit">
  <div id="back_button">
    <%= link_to admin_cohort_path do %>
      <i class="fas fa-times"></i>
    <% end %>
  </div>
  <%= form_for ([@admin, @cohort]) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :start %>
    <%= f.date_field :start %><br>
    <%= f.label :end %>
    <%= f.date_field :end %><br>

    <%= collection_select(:cohort, :course_id, Course.all, :id, :name) %>
    <%= collection_select(:cohort, :instructor_id, Instructor.all, :id, :name) %>
    <%= collection_check_boxes(:cohort, :student_ids, Student.all, :id, :name) %>
    <%= f.submit 'Submit'%>
  <% end %>
</div>
