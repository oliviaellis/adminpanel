<%= render "shared/navbar" %>
<div class="header animated slideInDown">
  <h1><%= @course.name %></h1>
</div>
<div class="edit animated zoomIn">
  <div id="back_button">
    <%= link_to admin_course_path do %>
      <i class="fas fa-times"></i>
    <% end %>
  </div>
  <%= form_for ([@admin, @course]) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :hours %>
    <%= f.number_field :hours %><br>

    <%= f.submit 'Submit'%>
  <% end %>
</div>
