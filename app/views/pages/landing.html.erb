<div class="logo">
  <div id="smash"><h1>Super Smash</h1></div>
  <div class="animated bounceInRight delay-1s" id="academy"><h1>ACADEMY</h1></div>
</div>
<% if flash[:alert]%>
  <div class="error"><%= flash[:alert]%></div>
<% end %>
<div id="landing">
  <%= form_tag login_path do |form| %>
    <%= text_field_tag :email, nil, placeholder: 'test@test.com', value: 'test@test.com' %><br>
    <%= password_field_tag :password, nil, placeholder: '123456', value: '123456' %><br>
    <%= submit_tag 'Enter' %>
  <% end %>
</div>
