<%= render "shared/navbar" %>
<div class="header animated slideInDown">
  <h1><%= @student.name %></h1>
</div>
<div class="profile animated zoomIn">
  <div id="edit_button">
    <%= link_to edit_admin_student_path do %>
      <i class="fas fa-pen"></i>
    <% end %>
  </div>
  <div class="profile_photo">
    <% if @student.avatar.attached? %>
    <%=  image_tag(@student.avatar, width: 300) %>
    <% else %>
      <div class="placeholder_image"></div>
    <% end %>
  </div>
  <div class="profile_info">
    <h2>Stats</h2>
    <h3>Age: <%= @student.age %></h3>
    <h3>Education: <%= @student.education %></h3>
    <h2>Cohorts</h2>
    <% if !@student.cohorts.empty? %>
    <ul>
      <% @student.cohorts.each do |c| %>
        <li><%= link_to c.name, admin_cohort_path(id: c.id) %></li>
      <% end %>
    <ul>
    <% else %>
      <h3>No cohorts to show</h3>
    <% end %>
  </div>
</div>
