<%= render "shared/navbar" %>
<div class="header animated slideInDown">
  <h1><%= @instructor.name %></h1>
</div>
<div class="profile animated zoomIn">
  <div id="edit_button">
    <%= link_to edit_admin_instructor_path do %>
      <i class="fas fa-pen"></i>
    <% end %>
  </div>
  <div class="profile_photo">
    <% if @instructor.avatar.attached? %>
      <%= image_tag(@instructor.avatar, width: 200) %>
    <% else %>
      <div class="placeholder_image"></div>
    <% end %>
  </div>
  <div class="profile_info">
    <h2>Stats</h2>
    <h3>Age: <%= @instructor.age %></h3>
    <h3>Education: <%= @instructor.education %></h3>
  </div>
  <div class="profile_cohorts">
    <h2>Cohorts</h2>
    <% if !@instructor.cohorts.empty? %>
    <ul>
      <% @instructor.cohorts.each do |c| %>
        <li><%= link_to c.name, admin_cohort_path(id: c.id) %></li>
      <% end %>
    </ul>
    <% else %>
      <h3>No cohorts to show</h3>
    <% end %>
  </div>
</div>
