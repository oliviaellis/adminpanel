<%= render "shared/navbar" %>
<div class="subheader"><h2><%= current_user.first_name %></h2></div>
<div class="header" id="instructor_header">
  <h1><%= @instructor.name %></h1>
</div>
<div class="edit">
  <%= form_for ([@admin, @instructor]) do |f| %>
    <%= image_tag(@instructor.avatar, width: 200) if @instructor.avatar.attached? %><br>
    <%= f.file_field :avatar, direct_upload: true %><br>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %><br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %><br>
    <%= f.label :age %>
    <%= f.number_field :age %><br>
    <%= f.label :education %>
    <%= f.select :education, ["", "High School", "Bachelor's Degree", "Master's Degree", "Ph.D"] %>
    <%= f.label :salary %>
    <%= f.number_field :salary %><br>

    <%= f.submit 'Submit'%>
  <% end %>
</div>
