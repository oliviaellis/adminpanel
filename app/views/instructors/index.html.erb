<%= render "shared/instructor_header" %>
<%= render "shared/navbar" %>
<div class="container animated zoomIn" id="instructor_list">
  <div class="row" id="instructor_headers">
    <div class="col-sm-2 column_header">
      First
    </div>
    <div class="col-sm-3 column_header">
      Last
    </div>
    <div class="col-sm-1 column_header">
      Age
    </div>
    <div class="col-sm-1 column_header">
      Salary
    </div>
    <div class="col-sm column_header">
      Education
    </div>
  </div>
  <% @instructors.each do |i| %>
  <div class="row" id="instructor-<%=i.id%>">
      <div class="col-sm">
      <%= link_to i.first_name, admin_instructor_path(id: i.id) %>
      </div>
      <div class="col-sm">
        <%= link_to i.last_name, admin_instructor_path(id: i.id) %>
      </div>
      <div class="col-sm-1">
        <%= i.age %>
      </div>
      <div class="col-sm-1">
        $<%= i.salary %>
      </div>
      <div class="col-sm">
        <%= i.education %>
      </div>
      <div class="col-sm">
        <span class="edit_link"><%= link_to "Edit", edit_admin_instructor_path(id: i.id) %></span>
        <span class="delete_link"><%= link_to "Delete", admin_instructor_path(id: i.id), remote: true, method: :delete, data: { confirm: 'Are you sure? This action is permanent.'} %></span>
      </div>
    </div>
    <% end %>
</div>

<div class="new animated zoomIn">
  <%= link_to 'New', new_admin_instructor_path %>
</div>
