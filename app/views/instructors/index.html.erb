<%= render "shared/instructor_header" %>
<%= render "shared/navbar" %>
<div class="list_container" id="instructor_list">
  <% @instructors.each do |i| %>
    <div class="list_item" id="first_name">
      <%= link_to i.first_name, admin_instructor_path(id: i.id) %>
    </div>
    <div class="list_item" id="last_name">
      <%= link_to i.last_name, admin_instructor_path(id: i.id) %>
    </div>
    <div class="list_item" id="age">
      <%= i.age %>
    </div>
    <div class="list_item" id="salary">
      <%= i.salary %>
    </div>
    <div class="list_item" id="education">
      <%= i.education %>
    </div>
    <div class="list_item" id="options">
      <%= link_to "Show", admin_instructor_path(id: i.id) %>
      <%= link_to "Edit", edit_admin_instructor_path(id: i.id) %>
      <%= link_to "Delete", admin_instructor_path(id: i.id), remote: true, method: :delete, data: { confirm: 'Are you sure? This action is permanent.'} %>
    </div>
  <% end %>
</div>

<div class="new">
  <%= link_to 'New', new_admin_instructor_path %>
</div>
